<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <meta name="keywords" content="<%=@seo_keywords%>"/>

    <%= csp_meta_tag %>

    <%= favicon_link_tag 'favicons/favicon.ico' %>

    <%= stylesheet_link_tag 'portfolio_pieces', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    

    <main role="main">

      <%= render 'shared/project_nav' %>

      <%= render 'shared/project_masthead' unless logged_in?(:site_admin) %>

    </main>

    <%= yield %>

    <%= render 'shared/project_footer' %>

    <%= source_helper("application") %>
  </body>
</html>