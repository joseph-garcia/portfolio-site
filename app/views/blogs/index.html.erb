<main role="main" class="container">
  <div class="row">
    <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark featured">
      <div class="col-md-6 px-0">
        <% firstBlog = @blogs.first %>
        <h1 class="display-4 font-italic"><%=firstBlog.title%></h1>
        <p class="lead my-3"><%=firstBlog.snippet%></p>
        <p class="lead mb-0"><a href="#" class="text-white font-weight-bold"><%= link_to "Continue reading...", blog_path(firstBlog)%></a></p>
        
      </div>
    </div>

    
    
    <div class="col-md-8 blog-main">
      <!-- 
      <h3 class="pb-3 mb-4 font-italic border-bottom">
        From the Firehose
      </h3>
      -->
      <span>
          <%= link_to 'New Blog', new_blog_path if logged_in?(:site_admin) %>
      </span>

      

      <%= render @blogs %>

      <%= paginate @blogs %>



      <nav class="blog-pagination">
        <a class="btn btn-outline-primary" href="#">Older</a>
        <a class="btn btn-outline-secondary disabled" href="#">Newer</a>
      </nav>

    </div><!-- /.blog-main -->



  </div><!-- /.row -->

</main><!-- /.container -->