<div class="col-md-4">
  <div class="card mb-4 box-shadow">
    <%= link_to portfolio_pieces_show_path(portfolio_item) do %>
    
    
    <div class="card-body">
      <%= image_tag portfolio_item.thumb_image , class: "project-thumbnail" unless portfolio_item.thumb_image.nil? %>
      <p class="card-text">
        <%= portfolio_item.subtitle %>
      </p>
      
      <div class="d-flex justify-content-between float-right">
        <small class="text-muted month-year"><%= portfolio_item.monthyear %></small>
      </div>
      
    </div>
    <% end %>
  </div>
</div>





