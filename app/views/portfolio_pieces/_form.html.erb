<%= form_with(model: @portfolio_item, local: true) do |form| %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :subtitle %>
      <%= form.text_area :subtitle, class: 'form-control' %>
    </div>
  </div>


  <div class="col-md-6">
    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, class: 'form-control', rows: 12 %>
    </div>
  </div>
</div>

<div class="col-md-12">
<hr>
<h2>Technologies used </h2>

<div>
  <%= form.fields_for :technologies do |tech_form| %>
    <%= render 'technology_fields', f: tech_form %>
  <% end %>

  <div>
    <%= link_to_add_association 'Add Technology', form, :technologies %>
  </div>
</div>

<div class="form-group">
  <%= form.submit 'Save Project Item', class: 'btn btn-primary btn-block' %>
</div>
</div>
<% end %>