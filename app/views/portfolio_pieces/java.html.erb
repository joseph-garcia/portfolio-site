<h1>Java Projects</h1>

<%= link_to "Create New Project", new_portfolio_piece_path if logged_in?(:site_admin) %>

<% @java_items.each do |portfolio_item| %>
  <p><%= link_to portfolio_item.title, portfolio_pieces_show_path(portfolio_item) %></p>
  <p><%= portfolio_item.subtitle %></p>
  <p><%= portfolio_item.body %></p>
  <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
  <%= link_to "Edit", edit_portfolio_piece_path(portfolio_item) if logged_in?(:site_admin) %>
  <%= link_to 'Delete Project', portfolio_piece_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
<% end %>